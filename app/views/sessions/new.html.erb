<h1>Sign In</h1>


<%= form_tag sessions_path do %>
  <div class="field">
    <!-- change focus content to label_tag -->
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <!-- change focus content to label_tag -->
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Sign In" %>
  </div>
<% end %>
